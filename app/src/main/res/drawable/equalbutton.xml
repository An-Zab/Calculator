<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                android:color="@color/buttoncolor1"/>

            <corners
                android:bottomLeftRadius="45dp"
                android:bottomRightRadius="45dp"
                android:topLeftRadius="45dp"
                android:topRightRadius="45dp" />

            <gradient android:type="radial"
                android:gradientRadius="600"
                android:startColor="@color/equalcolor1"
                android:endColor="@color/equalcolor1.1">
            </gradient>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                android:color="#FF000000"/>

            <corners
                android:bottomLeftRadius="45dp"
                android:bottomRightRadius="45dp"
                android:topLeftRadius="45dp"
                android:topRightRadius="45dp" />

            <gradient android:type="radial"
                android:gradientRadius="600"
                android:startColor="@color/buttoncolor1pressed"
                android:endColor="@color/buttoncolor1.1pressed">
            </gradient>
        </shape>
    </item>
</selector>